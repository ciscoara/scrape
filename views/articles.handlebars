<div>
    <h1>Hot NEWS</h1>
</div>
<br>
<div class="row">

    {{#each article}}
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <p id={{_id}}><a href={{link}} target="_blank">
                        <h2>{{title}}</h2>
                    </a><br><br><button type="button" class="btn btn-outline-secondary">Leave a Note</button>
            </div>
        </div>
        <br>
    </div>
    {{/each}}
</div>